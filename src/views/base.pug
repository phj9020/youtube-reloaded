doctype html
html(lang="ko")
    head 
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header 
            h1=pageTitle
            nav 
                ul 
                    li 
                        a(href='/') Home
                    li 
                        a(href=`/videos/upload`) Upload Video
                    li 
                        a(href='/search') Search
                    if loggedIn
                        li 
                            a(href="/logout") Log out
                        li 
                            a(href="/myProfile") #{loggedInUser.name}'s Profile
                    else 
                        li 
                            a(href="/login") Login
                        li 
                            a(href='/join') Join
                    
        main
            block content
    include partials/footer